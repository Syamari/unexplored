<% flash.each do |message_type, message| %>
  <div hidden>
    <div role="alert" class="alert alert-info">
    </div>
    <div role="alert" class="alert alert-success">
    </div>
    <div role="alert" class="alert alert-warning">
    </div>
    <div role="alert" class="alert alert-error">
    </div>
  </div>
  <%# 上記のdiv hiddenはDaisyUIのalertのクラスを動的に使うための記述　%>
  <div role="alert" class="animate-slide-in-bck-left alert alert-<%= message_type %> text-indigo-900 font-medium md:block hidden">
    <i class="fa-solid fa-arrow-right md:block hidden"></i> <%= message %>
  </div>
  <div role="alert" class="animate-slide-in-bck-left alert alert-<%= message_type %> text-xs font-medium md:hidden">
    <%= message %>
  </div>
<% end %>