<div class="container mx-auto my-4 py-4 px-4 border border-red-500">
  <div class="mx-auto max-w-sm px-4 border border-red-500">
      <h1 class="text-center text-3xl font-bold mb-6">ログイン</h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'input input-bordered w-full', placeholder: "Email" %>
        </div>
        <div class="mb-4">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'input input-bordered w-full', placeholder: "Password" %>
        </div>
        <div class="mb-4">
          <%= f.submit 'ログイン', class: 'btn btn-primary w-full' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
        <a href="#">パスワードをお忘れの方はこちら</a>
      </div>
  </div>
</div>