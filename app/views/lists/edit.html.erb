<div class="container mx-auto my-4 py-4 px-4 border border-red-500">
  <div class="mx-auto max-w-sm px-4 border border-red-500">
      <h1 class="text-center text-3xl font-bold mb-6">リスト作成</h1>
      <%= form_with model: @list, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'input input-bordered w-full', placeholder: "リスト名" %>
        </div>
        <div class="mb-4">
          <%= f.submit '登録', class: 'btn btn-primary w-full' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to 'リスト一覧へ', lists_path %>
      </div>
  </div>
</div>

<div class="container mx-auto my-4 py-4 px-4 text-white bg-gradient-to-r from-purple-700 to-indigo-800 border border-gray-500 rounded-lg shadow-lg m-auto">
  <h1 class="text-center text-3xl font-bold mb-6"><i class="fa-solid fa-file-pen"></i> リスト名の編集</h1>
      <%= form_with model: @list, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'text-black input input-bordered w-full', placeholder: "リスト名" %>
        </div>
        <div class="mb-4">
          <%= f.submit '更新', class: 'btn btn-primary w-full' %>
        </div>
      <% end %>
  <div class='link-hover text-center'>
    <%= link_to 'リスト一覧へ', lists_path %>
  </div>
</div>
