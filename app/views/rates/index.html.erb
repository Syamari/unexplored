<% content_for :header_sub do %>
	<header class="bg-gradient-to-r from-purple-900 to-indigo-800 text-white py-4">
		<div class="container mx-auto px-8 flex justify-between items-center">
			<h1 class="text-2xl font-bold tracking-tight leading-tight"><i class="fa-solid fa-location-dot"></i> <%= current_user.user_name %>のホーム</h1>
			<div class="bg-gradient-to-r from-purple-900 to-indigo-800 flex justify-center space-x-2 py-2">
				<%= link_to lists_path(view: 'own'), class: "btn btn-sm btn-primary " do %>
					マイリスト
				<% end %>
				<%= link_to lists_path(view: 'public'), class: "btn btn-sm btn-primary" do %>
					公開リスト
				<% end %>
				<%= link_to lists_path(view: 'bookmarked'), class: "btn btn-sm btn-primary" do %>
					<i class="fa-solid fa-bookmark"></i>リスト
				<% end %>
				<%= link_to rates_path, class: "btn btn-sm btn-primary #{'bg-gradient-to-r from-violet-600 to-fuchsia-700' if request.original_url == rates_url }" do %>
					<i class="fa-solid fa-star"></i>楽曲
				<% end %>
			</div>
			<div class="text-sm text-gray-300 breadcrumbs">
			</div>
		</div>
	</header>
<% end %>

<div class="container mx-auto my-4 px-2 border border-slate-500 rounded-lg shadow-lg">
  <div class="flex flex-wrap justify-center">
    <% @rates.each do |rate| %>
      <div class="w-full xl:w-1/2 p-4">
        <div class="bg-gradient-to-r from-purple-900 to-indigo-800 text-white rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out">
          <div class="flex p-6 justify-between flex-col space-y-2">
            <div class="flex text-yellow-400">
              <% rate.score.times do %>
                <i class="fa-solid fa-star"></i>
              <% end %>
              <% (3 - rate.score).times do %>
                <i class="fa-regular fa-star"></i>
              <% end %>
            </div>
            <h1 class="text-3xl font-bold">
              <%= link_to "#{rate.song.artist.name} - #{rate.song.name}", rate_path(rate), class: 'text-white hover:text-blue-300 active:text-blue-500 active:shadow-inner' %>
            </h1>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>